  <template type="public" title="moturdrn_gw2guilds_member_list_item" version_id="2000310" version_string="2.0.3 Alpha"><![CDATA[<xf:macro name="member_block" arg-user="!" arg-guild="!" arg-memberType="!">
    <li id="member-{$guild.guild_id}-{$user.user_id}" class="memberListItem guildMemberListItem">
        <div class="userAvatar">
            <xf:avatar user="{$user.user}" size="m" notooltip="true" />
        </div>
        <div class="memberInfo">
            <h3 class="title"><xf:username user="$user.user" /></h3>
            <xf:if is="{$showAccNames}"><div class="tagLine">{$user.GW2AccName}</div></xf:if>
            <div class="tagLine muted">
                <xf:if is="$user.user.user_id != $xf.visitor.user_id && $memberType != 'leader'">
                    <xf:if is="$memberType == 'officer' && $guild.accessLevel >= 40">
                        <div class="controlAction">
                            <ul class="controlLink">
                                <li><a href="{{ link('canonical:guilds/members/demote', $guild, { 'user_id': $user.user.user_id }) }}"><span class="control promote">Demote to Member</span></a></li>
                            </ul>
                        </div>
                    </xf:if>
                    <xf:if is="$memberType == 'pending' && $guild.accessLevel >= 30">
                        <div class="controlAction">
                            <ul class="controlLink">
                                <li><a href="{{ link('canonical:guilds/members/promote', $guild, { 'user_id': $user.user.user_id }) }}"><span class="control promote">Promote to Member</span></a></li>
                                <li><a href="{{ link('canonical:guilds/members/remove', $guild, { 'user_id': $user.user.user_id }) }}" class="removeLink"><span class="control remove">Remove</span></a></li>
                            </ul>
                        </div>
                    </xf:if>
                    <xf:if is="$memberType == 'member' && $guild.accessLevel >= 30">
                        <div class="controlAction">
                            <ul class="controlLink">
                            <xf:if is="$guild.accessLevel >= 40">
                                <li><a href="{{ link('canonical:guilds/members/promote', $guild, { 'user_id': $user.user.user_id }) }}"><span class="control promote">Promote to Officer</span></a></li>
                            </xf:if>
                                <li><a href="{{ link('canonical:guilds/members/remove', $guild, { 'user_id': $user.user.user_id }) }}" class="removeLink"><span class="control remove">Remove</span></a></li>
                            </ul>
                        </div>
                    </xf:if>
                </xf:if>
            </div>
