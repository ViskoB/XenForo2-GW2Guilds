  <template type="public" title="moturdrn_gw2guilds_list_item" version_id="2000310" version_string="2.0.3 Alpha"><![CDATA[<xf:macro name="guild_block" arg-guild="!">
    <li class="GuildListItem {$guild.status}" id="guild-{$guild.guild_id}">
        <div class="GuildListBlock GuildEmblem">
            <div class="GuildListBlockInner">
                {{guild_emblem($guild, 64)}}
            </div>
        </div>
        <div class="GuildListBlock GuildMain">
            <div class="GuildListBlockInner">
                <h3 class="title">
                    <a name="guild-{$guild.guild_id}"></a><a href="{{link('canonical:guilds', $guild)}}" class="TeamIcon">{$guild.guild_name}</a>
                    <div class="guildTitle">
                        [{$guild.guild_tag}]
                    </div>
                </h3>
                <xen:if is="{$guild.guild_website}">
                    <div class="tagLine">
                        <a href="{$guild.guild_website}">{$guild.guild_website}</a>
                    </div>
                </xen:if>
                <div class="tagLine">
                    {{
                    snippet($guild.guild_recruitment, 300, {'stripQuote': true})
                    }}
                </div>
                <div class="tagLine">
                    <xf:if is="{$guild.canEdit}">
                        <xf:if is="{$guild.status} == 'Active' || {$guild.status} == 'Pending (Change)'">
                            <xf:button href="{{link('canonical:guilds/inactivate', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Set Inactive</span></xf:button>
                        </xf:if>
                        <xf:if is="{$guild.status} == 'Inactive'">
                            <xf:button href="{{link('canonical:guilds/activate', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Set Active</span></xf:button>
                        </xf:if>
                    </xf:if>
                    <xf:if is="{$guild.canJoin}">
                        <xf:button href="{{link('canonical:guilds/join', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Join</span></xf:button>
                    </xf:if>
                    <xf:if is="{$guild.canLeave}">
                        <xf:button href="{{link('canonical:guilds/leave', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Leave</span></xf:button>
                    </xf:if>
                    <xf:if is="{$guild.canEdit}">
                        <xf:button href="{{link('canonical:guilds/edit', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Edit</span></xf:button>
                    </xf:if>
                    <a href="{{link('canonical:guilds/roster', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Roster<xf:if is="{$guild.canEdit} && {$guild.pending_count} > 0"> ({$guild.pending_count})</xf:if></span></a>
                    <xf:if is="{$guild.canTransfer}">
                        <xf:button href="{{link('canonical:guilds/transfer', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Transfer</span></xf:button>
                    </xf:if>
                    <xf:if is="{$guild.canDelete}">
                        <xf:button href="{{link('canonical:guilds/delete', $guild)}}" class="button--cta button" data-xf-click="overlay"><span>Delete</span></xf:button>
                    </xf:if>
                </div>
            </div>
        </div>
        <div class="GuildListBlock GuildInfo">
            <div class="GuildListBlockInner">
                <dl><dt>Members:</dt> <dd>{$guild.members}</dd></dl>
                <dl><dt>GH.eu Members:</dt> <dd>{$guild.member_count}</dd></dl>
                <dl><dt>PvE:</dt> <dd>{$guild.PvE}</dd></dl>
                <dl><dt>PvP:</dt> <dd>{$guild.PvP}</dd></dl>
                <dl><dt>WvW:</dt> <dd>{$guild.WvW}</dd></dl>
                <dl><dt>Casual:</dt> <dd>{$guild.Casual}</dd></dl>
                <dl><dt>Status:</dt> <dd>{$guild.status}</dd></dl>
            </div>
        </div>
    </li>
</xf:macro>]]></template>
