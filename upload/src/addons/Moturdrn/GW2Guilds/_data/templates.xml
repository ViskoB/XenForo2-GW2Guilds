  <template type="public" title="moturdrn_gw2guilds_index" version_id="2000310" version_string="2.0.3 Alpha"><![CDATA[<xf:title>Guilds</xf:title>
<xf:pageaction><xf:if is="$myGuilds > 0"><xf:button href="{{link('canonical:guilds/mine')}}" class="button--cta"><span>My Guilds</span></xf:button></xf:if> <xf:if is="$canCreate"><xf:button  href="{{link('canonical:guilds/add')}}" class="button--cta" data-xf-click="overlay" icon="add"><span>Add Guild</span></xf:button></xf:if></xf:pageaction>
<xf:css src="moturdrn_gw2guilds_list.less" />
<xf:css src="moturdrn_gw2guilds_list_mini.less" />
<div class="GuildListBlock">
    <div>
        <xf:if is="$pendingGuilds is not empty">
            <div class="memberListMain">
                <div class="section">
                    <ol class="memberListItems">
                        <li class="primaryContent">Pending Guild Requests</li>
                        <xf:foreach loop="$pendingGuilds" value="$guild">
                            <xf:macro template="moturdrn_gw2guilds_guild_list_pending_item" name="guild_block"
                                      arg-guild="{$guild}"
                            />
                        </xf:foreach>
                    </ol>
                </div>
            </div>
        </xf:if>
        <ol class="guildList">
            <xf:if is="$guilds is not empty">
                <xf:foreach loop="$guilds" value="$guild">
                    <xf:macro template="moturdrn_gw2guilds_list_item" name="guild_block"
                              arg-guild="{$guild}"
                    />
                </xf:foreach>
            <xf:else />
                <li class="GuildListItem">No Guilds to Display!</li>
            </xf:if>
        </ol>
    </div>
</div>]]></template>
