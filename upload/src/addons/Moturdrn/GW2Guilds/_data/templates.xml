  <template type="public" title="moturdrn_gw2guilds_roster" version_id="2000310" version_string="2.0.3 Alpha"><![CDATA[<xf:title>{$guild.guild_name} [{$guild.guild_tag}]</xf:title>
<xf:css src="moturdrn_gw2guilds_list.less" />
<div class="GuildListBlock">
    <div>
        <ol class="guildList">
            <xf:macro template="moturdrn_gw2guilds_list_item" name="guild_block"
                      arg-guild="{$guild}"
            />
        </ol>
    </div>
</div>
<xf:css src="moturdrn_gw2guilds_member.less" />
<div class="GuildListBlock">
    <div>
        <ol class="guildList">
            <xf:if is="$guild.accessLevel >= 30">
                <div class="pageNavLinkGroup">
                    <xf:form action="{{ link('guilds/members/assign', $guild) }}" class="block" attributes="{{ widget_data($widget, true) }}">
                        <div class="block-container">
                            <h3 class="block-minorHeader">{$title}</h3>
                            <div class="block-body block-row">
                                <label for="username">Enter a username below to add them to the Guild.</label>
                                <xf:textbox name="username" placeholder="{{ phrase('name...') }}" ac="single" data-autosubmit="true" autocomplete="off" />
                                <input type="submit" value="Add" class="button primary" accesskey="s" />
                            </div>
                        </div>
                    </xf:form>
                </div>
                <div class="block-container">
                <div class="memberListMain">
                    <div>
                        <ol class="memberListItems">
                            <li class="primaryContent">Pending</li>
                            <xf:if is="$pending is not empty">
                                <xf:foreach loop="$pending" value="$user">
                                    <xf:macro template="moturdrn_gw2guilds_member_list_item" name="member_block"
                                              arg-user="{$user}"
                                              arg-guild="{$guild}"
                                    />
                                </xf:foreach>
                                <xf:else />
                                <li class="primaryContent">There are no pending join requests</li>
                            </xf:if>
                        </ol>
                    </div>
                </div>
                </div>
            </xf:if>
            <div class="block-container">
            <div class="memberListMain">
                <div>
                    <ol class="memberListItems">
                        <li class="primaryContent">Leader</li>
                        <xf:if is="$leader is not empty">
                            <xf:foreach loop="$leader" value="$user">
                                <xf:macro template="moturdrn_gw2guilds_member_list_item" name="member_block"
                                          arg-user="{$user}"
                                          arg-guild="{$guild}"
                                />
                            </xf:foreach>
                        </xf:if>
                    </ol>
                </div>
            </div>
            <div class="memberListMain">
                <div>
                    <ol class="memberListItems">
                        <li class="primaryContent">Officers</li>
                        <xf:if is="$officers is not empty">
                            <xf:foreach loop="$officers" value="$user">
                                <xf:macro template="moturdrn_gw2guilds_member_list_item" name="member_block"
                                          arg-user="{$user}"
                                          arg-guild="{$guild}"
                                />
                            </xf:foreach>
                            <xf:else />
                            <li class="primaryContent">There are no Guild Officers</li>
                        </xf:if>
                    </ol>
                </div>
            </div>
            <div class="memberListMain">
                <div>
                    <ol class="memberListItems">
                        <li class="primaryContent">Members</li>
                        <xf:if is="$members is not empty">
                            <xf:foreach loop="$members" value="$user">
                                <xf:macro template="moturdrn_gw2guilds_member_list_item" name="member_block"
                                          arg-user="{$user}"
                                          arg-guild="{$guild}"
                                />
                            </xf:foreach>
                            <xf:else />
                            <li class="primaryContent">There are no ordinary members</li>
                        </xf:if>
                    </ol>
                </div>
            </div>
            </div>
        </ol>
    </div>
</div>]]></template>
