<templates>
  <template type="public" title="moturdrn_gw2guilds_add" version_id="2000310" version_string="2.0.3 Alpha"><![CDATA[<xf:title><xf:if is="$guild is not empty">{{ phrase('moturdrn_gw2guilds_edit_guild') }}: {$guild.guild_name}<xf:else />{{ phrase('moturdrn_gw2guilds_add_guild') }}</xf:if></xf:title>

<div style="background-color: @contentBackground;">
    <xf:form action="{{ link('guilds/save', $guild) }}" method="post" class="block">
        <xf:if is="!{$guild.guild_id}">
            <fieldset>
                <dl class="ctrlUnit titleUnit">
                    <dt><label for="ctrl_title">Guild Name:</label></dt>
                    <dd>
                        <input type="text" name="guild_name" value="{$guild.guild_name}" class="textCtrl OptOut"
                               data-liveTitleTemplate="{xf:if $guild.guild_id, 'Edit Guild', 'Add New Guild'}: <em>%s</em>"
                               id="ctrl_title_team_add" maxlength="100"
                        />
                        <p class="explain">{{ phrase('moturdrn_gw2guilds_the_name_of_your_guild') }}</p>
                    </dd>
                </dl>

                <dl class="ctrlUnit">
                    <dt><label for="ctrl_tag_line">Guild Tag:</label></dt>
                    <dd>
                        <input type="text" name="guild_tag" value="{$guild.guild_tag}" class="textCtrl OptOut" id="ctrl_tag_line" maxlength="100" />
                        <p class="explain">{{ phrase('moturdrn_gw2guilds_your_guilds_tag') }}</p>
                    </dd>
                </dl>

                <dl class="ctrlUnit">
                    <dt><label for="ctrl_tag_line">Website:</label></dt>
                    <dd>
                        <input type="text" name="guild_website" value="{$guild.guild_website}" class="textCtrl OptOut" id="ctrl_tag_line" maxlength="100" />
                        <p class="explain">{{ phrase('moturdrn_gw2guilds_your_guilds_website') }}</p>
                    </dd>
                </dl>
            </fieldset>
            <xf:else />
            <input type="hidden" name="guild_id" value="{$guild.guild_id}" />
            <dl class="ctrlUnit">
                <dt><label for="ctrl_tag_line">Website:</label></dt>
                <dd>
                    <input type="text" name="guild_website" value="{$guild.guild_website}" class="textCtrl OptOut" id="ctrl_tag_line" maxlength="100" />
                    <p class="explain">{{ phrase('moturdrn_gw2guilds_your_guilds_website') }}</p>
                </dd>
            </dl>
        </xf:if>

        <fieldset>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">Members:</label></dt>
                <dd>
                    <select name="members">
                        <option value="1-50" <xf:if is="{$guild.members} == '1-50'">selected</xf:if>>1-50</option>
                        <option value="51-100" <xf:if is="{$guild.members} == '51-100'">selected</xf:if>>51-100</option>
                        <option value="101-150" <xf:if is="{$guild.members} == '101-150'">selected</xf:if>>101-150</option>
                        <option value="151-200" <xf:if is="{$guild.members} == '151-200'">selected</xf:if>>151-200</option>
                        <option value="201-250" <xf:if is="{$guild.members} == '201-250'">selected</xf:if>>201-250</option>
                        <option value="251-300" <xf:if is="{$guild.members} == '251-300'">selected</xf:if>>251-300</option>
                        <option value="301-350" <xf:if is="{$guild.members} == '301-350'">selected</xf:if>>301-350</option>
                        <option value="351-400" <xf:if is="{$guild.members} == '351-400'">selected</xf:if>>351-400</option>
                        <option value="401-450" <xf:if is="{$guild.members} == '401-450'">selected</xf:if>>401-450</option>
                        <option value="451-500" <xf:if is="{$guild.members} == '451-500'">selected</xf:if>>451-500</option>
                        <option value="501+" <xf:if is="{$guild.members} == '500+'">selected</xf:if>>500+</option>
                    </select>
                    <p class="explain">{{ phrase('moturdrn_gw2guilds_current_number_of_members') }}</p>
                </dd>
            </dl>
        </fieldset>

        <fieldset>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">PvE:</label></dt>
                <dd>
                    No: <input type="radio" name="PvE" value="N" <xf:if is="{$guild.PvE} == 'N' || !{$guild.guild_id}">checked</xf:if> /> Yes: <input type="radio" name="PvE" value="Y" <xf:if is="{$guild.PvE} == 'Y'">checked</xf:if> />
                </dd>
            </dl>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">PvP:</label></dt>
                <dd>
                    No: <input type="radio" name="PvP" value="N" <xf:if is="{$guild.PvP} == 'N' || !{$guild.guild_id}">checked</xf:if> /> Yes: <input type="radio" name="PvP" value="Y" <xf:if is="{$guild.PvP} == 'Y'">checked</xf:if> />
                </dd>
            </dl>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">WvW:</label></dt>
                <dd>
                    No: <input type="radio" name="WvW" value="N" <xf:if is="{$guild.WvW} == 'N' || !{$guild.guild_id}">checked</xf:if> /> Yes: <input type="radio" name="WvW" value="Y" <xf:if is="{$guild.WvW} == 'Y'">checked</xf:if> />
                </dd>
            </dl>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">Casual:</label></dt>
                <dd>
                    No: <input type="radio" name="Casual" value="N" <xf:if is="{$guild.Casual} == 'N' || !{$guild.guild_id}">checked</xf:if> /> Yes: <input type="radio" name="Casual" value="Y" <xf:if is="{$guild.Casual} == 'Y'">checked</xf:if> />
                </dd>
            </dl>
        </fieldset>

        <fieldset>
            <dl class="ctrlUnit">
                <dt><label for="ctrl_message">Recruitment/About:</label></dt>
                <dd>
                    <xf:editorrow label="{{ phrase('moturdrn_gw2guilds_provide_an_in_depth_description') }}" name="guild_recruitment" value="{$guild.guild_recruitment}" rowtype="fullWidth noLabel" />
                    <p class="explain">{{ phrase('moturdrn_gw2guilds_provide_an_in_depth_description') }}</p>
                </dd>
            </dl>
        </fieldset>

        <dl class="ctrlUnit submitUnit">
            <dt></dt>
            <dd>
                <input type="submit" value="{{ phrase('save') }}" class="button primary" accesskey="s" />
            </dd>
        </dl>
    </xf:form>
</div>]]></template>
