  <template type="public" title="moturdrn_gw2guilds_guild_list_pending_item" version_id="2000470" version_string="2.0.4"><![CDATA[<xf:macro name="guild_block" arg-guild="!">
    <li id="guild-{$guild.guild_id}" class="primaryContent memberListItem guildMemberListItem">
        <div class="userAvatar">
            <img src="<xf:callback class="Moturdrn\\GW2Guilds\\Listener" method="getEmblem" params="[{$guild.guild_name}]"></xf:callback>" />
